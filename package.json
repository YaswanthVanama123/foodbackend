{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for Patlinks ordering system",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "setup": "npm run build && node scripts/setup.js",
    "seed": "npm run build && node scripts/seed-database.js",
    "reset": "npm run build && node scripts/reset-database.js",
    "create-admin": "npm run build && node scripts/create-super-admin.js",
    "test-data": "npm run build && node scripts/test-data-generator.js",
    "seed:ts": "ts-node src/scripts/seed.ts",
    "seed:multi": "ts-node src/scripts/seedMultiTenant.ts",
    "seed:plans": "ts-node src/scripts/seedPlans.ts",
    "migrate": "ts-node src/scripts/migrateToMultiTenant.ts",
    "migrate:images": "ts-node src/scripts/migrateImages.ts",
    "cleanup:images": "ts-node src/scripts/cleanupImages.ts",
    "create:superadmin": "ts-node src/scripts/createSuperAdmin.ts",
    "test:isolation": "ts-node src/scripts/testDataIsolation.ts"
  },
  "dependencies": {
    "@types/json2csv": "^5.0.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.5",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/sharp": "^0.31.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
